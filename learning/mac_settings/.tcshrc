alias ls ls -G
alias ll ls -lG
alias ltr ls -lGtr
alias rmi rm -i
alias cpi cp -i
alias mvi mv -i
alias matlab matlab -nodesktop -nosplash
alias cat bat
alias htop top
alias du ncdu --color dark -rr -x --exclude .git --exclude node_modules
